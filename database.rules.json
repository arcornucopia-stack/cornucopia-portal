{
  "rules": {
    ".read": false,
    ".write": false,

    "cornucopia": {
      "users": {
        ".read": "auth != null && root.child('cornucopia/users').child(auth.uid).child('role').val() === 'admin'",
        "$uid": {
          ".read": "auth != null && (auth.uid === $uid || root.child('cornucopia/users').child(auth.uid).child('role').val() === 'admin')",
          ".write": "auth != null && (auth.uid === $uid || root.child('cornucopia/users').child(auth.uid).child('role').val() === 'admin')"
        }
      },

      "partners": {
        "$partnerUid": {
          ".read": "auth != null && (auth.uid === $partnerUid || root.child('cornucopia/users').child(auth.uid).child('role').val() === 'admin')",
          ".write": "auth != null && root.child('cornucopia/users').child(auth.uid).child('role').val() === 'admin'"
        }
      },

      "models": {
        "$modelId": {
          ".read": "auth != null",
          ".write": "auth != null && root.child('cornucopia/users').child(auth.uid).child('role').val() === 'admin'"
        }
      },

      "submissions": {
        "$submissionId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      },

      "events": {
        "$eventId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}
