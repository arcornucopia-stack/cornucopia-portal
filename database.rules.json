{
  "rules": {
    ".read": false,
    ".write": false,

    "cornucopia": {
      "users": {
        "$uid": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      },

      "submissions": {
        "$submissionId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      },

      "events": {
        "$eventId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}
