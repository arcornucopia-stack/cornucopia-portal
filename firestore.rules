rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isAdmin() {
      return signedIn() && userDoc().data.role == 'admin';
    }

    function isPartner() {
      return signedIn() && userDoc().data.role == 'partner';
    }

    match /users/{uid} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow write: if isAdmin();
    }

    match /submissions/{id} {
      allow read: if isAdmin() || (signedIn() && resource.data.businessId == userDoc().data.businessId);

      allow create: if isPartner()
        && request.resource.data.status == 'pending'
        && request.resource.data.uploaderUid == request.auth.uid;

      allow update: if isAdmin();
      allow delete: if false;
    }

    match /events/{id} {
      allow read: if isAdmin() || (signedIn() && resource.data.businessId == userDoc().data.businessId);
      allow create: if signedIn();
      allow update, delete: if false;
    }
  }
}
